namespace BGE

  class TriangleBitmap extends BGE.Math.Triangle

    public bitmap as ifDraw2d ' roBitmap

    sub new(bitmap as ifDraw2d, points as BGE.Math.Vector[])
      super(points)
      m.bitmap = bitmap
    end sub
  end class



  class RegionWithId

    region as roRegion

    id as string

    sub new(region as roRegion, id = "" as string)
      m.region = region
      m.id = id
    end sub
  end class


end namespace